@model EditProfileViewModel

<form asp-action="EditProfile" enctype="multipart/form-data" class="p-4 border rounded" novalidate>
    <h3 class="mb-4">Edit Profile</h3>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3">
        <label asp-for="Username" class="form-label">Username</label>
        <input asp-for="Username" class="form-control @(ViewData.ModelState["Username"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Enter your Username" />
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control @(ViewData.ModelState["Name"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Enter your name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Enter your email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Bio" class="form-label">Biography</label>
        <textarea asp-for="Bio" class="form-control @(ViewData.ModelState["Bio"]?.Errors.Count > 0 ? "is-invalid" : "")" rows="3" placeholder="Tell us about yourself"></textarea>
        <span asp-validation-for="Bio" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Location" class="form-label">Location</label>
        <input asp-for="Location" class="form-control @(ViewData.ModelState["Location"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Enter your location" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="BirthDate" class="form-label">Birth Date</label>
        <input asp-for="BirthDate" type="date" class="form-control @(ViewData.ModelState["BirthDate"]?.Errors.Count > 0 ? "is-invalid" : "")" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}