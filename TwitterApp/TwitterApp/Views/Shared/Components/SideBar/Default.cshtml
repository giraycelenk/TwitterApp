@model User
<ul class="list-group" id="sidebar">
    <li class="list-group-item">
        <a href="/" class="">
            <img src="~/img/TwitterX.png" class="twitter-logo-menu"/> 
        </a>
    </li>
    <a href="/" class=""><li class="list-group-item"><i class="fas fa-home"></i> Home</li></a>
    <li class="list-group-item"><i class="fa-solid fa-magnifying-glass"></i><span>Explore</span></li>
    <li class="list-group-item"><i class="far fa-bell"></i><span>Notifications</span></li>
    <li class="list-group-item"><i class="far fa-envelope"></i><span>Messages</span></li>
    <li class="list-group-item"><i class="far fa-lightbulb"></i><span>Grok</span></li>
    <li class="list-group-item"><i class="far fa-bookmark"></i><span>Bookmarks</span></li>
    <li class="list-group-item"><i class="fas fa-users"></i><span>Communities</span></li>
    <li class="list-group-item"><img src="~/img/TwitterX.png" class="twitter-logo-menu"/> <span>Premium</span></li>
    <li class="list-group-item"><i class="fa-solid fa-bolt"></i><span>Verified</span> Orgs</li>
    <li class="list-group-item"><i class="fas fa-ellipsis-h"></i><span>More</span></li>
    <a href="/@Model.Username"><li class="list-group-item"><i class="far fa-user"></i> Profile</li></a>
    @if(User.Identity!.IsAuthenticated)
    {
        <li class="list-group-item">
            <div class="d-flex justify-content-between align-items-center">
                <a href="/@Model.Username" class="d-flex align-items-center text-decoration-none flex-grow-1">
                    <img src="~/img/@Model.Image" alt="@Model.Name" class="avatar me-2"/> 
                    <div style="flex-grow: 1; min-width: 0;">
                        <h6 class="card-title mb-0" style="font-size: 15px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">@Model.Name</h6>
                        <span class="text-muted" style="font-size: 13px; white-space: nowrap;">@($"@{Model.Username}")</span>
                    </div>
                </a>
                <a href="/users/logout" class="nav-link ms-3">
                    <button class="btn btn-danger">Logout</button>
                </a>
            </div>
        </li>
    }
</ul>